<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/nav_home"
    android:id="@+id/mobile_navigation"
    >

    <fragment
        android:id="@+id/nav_home"
        android:name="es.iespuertodelacruz.alejandrosamuel.studycircle.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
        <action
            android:id="@+id/action_nav_home_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
        <action
            android:id="@+id/action_nav_home_to_navigation_start"
            app:destination="@id/navigation_start" />
    </fragment>

    <fragment
        android:id="@+id/nav_anuncios"
        android:name="es.iespuertodelacruz.alejandrosamuel.studycircle.ui.anuncios.AnunciosFragment"
        android:label="@string/menu_anuncios"
        tools:layout="@layout/fragment_anuncios" >
        <action
            android:id="@+id/action_nav_anuncios_to_nav_perfil"
            app:destination="@id/nav_perfil" />
    </fragment>

    <fragment
        android:id="@+id/nav_buscar"
        android:name="es.iespuertodelacruz.alejandrosamuel.studycircle.ui.buscar.BuscarFragment"
        android:label="@string/menu_buscar"
        tools:layout="@layout/fragment_buscar" >
        <action
            android:id="@+id/action_nav_buscar_to_nav_perfil"
            app:destination="@id/nav_perfil" />
    </fragment>


    <fragment
        android:id="@+id/nav_perfil"
        android:name="es.iespuertodelacruz.alejandrosamuel.studycircle.ui.alumno.AlumnoFragment"
        android:label="@string/acc_profile"
        tools:layout="@layout/fragment_alumno" >
        <action
            android:id="@+id/action_nav_perfil_to_nav_buscar"
            app:destination="@id/nav_buscar" />
        <action
            android:id="@+id/action_nav_perfil_to_nav_anuncios"
            app:destination="@id/nav_anuncios" />
    </fragment>

    <!-- Segunda nav-->


    <fragment
        android:id="@+id/navigation_start"
        android:name="es.iespuertodelacruz.alejandrosamuel.studycircle.ui.home.start.StartFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_navigation_start_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_navigation_start_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
        <action
            android:id="@+id/action_navigation_start_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="es.iespuertodelacruz.alejandrosamuel.studycircle.ui.home.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_start"
            app:destination="@id/navigation_start" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="es.iespuertodelacruz.alejandrosamuel.studycircle.ui.home.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_start"
            app:destination="@id/navigation_start" />
    </fragment>


</navigation>