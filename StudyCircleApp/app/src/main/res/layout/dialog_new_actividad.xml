<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtCabecera"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/bluestd"
        android:fontFamily="@font/poppins_medium_italic"
        android:text="Nueva Actividad"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/titleEditText"
            style="@style/EditTextCreateEvent"
            android:layout_width="match_parent"
            android:maxLength="100"
            android:layout_height="wrap_content"
            android:hint="Título" />

        <EditText
            android:id="@+id/descriptionEditText"
            style="@style/EditTextCreateEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="255"
            android:hint="Descripción"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:maxLines="6"
            android:scrollbars="vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/bluestd"
            android:fontFamily="@font/poppins_medium"
            android:text="Fecha de la actividad"/>
        <DatePicker
            android:id="@+id/datePicker"
            style="@style/DatePickerTheme"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"

            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>