<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtCabecera"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/bluestd"
        android:fontFamily="@font/poppins_medium_italic"
        android:text="Creación de curso"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/titleEditText"
            style="@style/EditTextCreateEvent"
            android:layout_width="match_parent"
            android:maxLength="100"
            android:layout_height="wrap_content"
            android:hint="Título" />
        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="#131313"
            android:layout_height="wrap_content"
            android:hint="@string/seleccione_la_materia_relacionada_al_curso"
            />
    </LinearLayout>

</LinearLayout>