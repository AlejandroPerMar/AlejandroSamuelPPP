<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <ImageView
        android:id="@+id/btnEliminarAnuncio"
        android:layout_width="30dp"
        android:visibility="gone"
        android:layout_height="30dp"
        android:background="@drawable/ic_borrar"
        android:layout_gravity="end"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/bluestd"
        android:fontFamily="@font/poppins_medium"
        android:text="Título" />
    <TextView
        android:id="@+id/titleTextView"
        style="@style/EditTextCreateEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/bluestd"
        android:fontFamily="@font/poppins_medium"
        android:text="Descripción" />
    <TextView
        android:id="@+id/descriptionTextView"
        style="@style/EditTextCreateEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/bluestd"
        android:fontFamily="@font/poppins_medium"
        android:text="Materia" />

    <TextView
        android:id="@+id/materiaTextView"
        style="@style/EditTextCreateEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/bluestd"
        android:fontFamily="@font/poppins_medium"
        android:text="Usuario" />

    <TextView
        android:id="@+id/usuarioTextView"
        style="@style/EditTextCreateEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blueenlace"
        android:textSize="16sp"
        android:padding="10dp" />

</LinearLayout>