<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewUsuarios"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:id="@+id/popUpCurso"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="@drawable/blue_border_rounded_10dp">
        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="usuario"
            android:paddingStart="10dp"
            android:paddingEnd="2dp"
            android:gravity="center_vertical"
            android:textColor="@color/blueenlace"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"/>
        <ImageView
            android:id="@+id/imgAceptar"
            android:layout_width="match_parent"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/ic_accept"
            android:gravity="center_vertical"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"/>
        <ImageView
            android:id="@+id/imgRechazar"
            android:layout_weight="7"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_refuse"
            android:gravity="center_vertical"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>